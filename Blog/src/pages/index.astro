---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getUrl } from '../utils/url';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<div class="hero-content">
					<div class="hero-left">
						<h1>Devansh Mahajan</h1>
						<p class="hero-title">Computer Science Student</p>
						<div class="social-links">
							<a href="https://github.com/Devansh-Mahajan" target="_blank" class="social-link">
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
								</svg>
								<span>Devansh-Mahajan</span>
							</a>
							<a href="https://www.linkedin.com/in/devansh-mahajan-2b2b99185/" target="_blank" class="social-link">
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
									<rect x="2" y="9" width="4" height="12"/>
									<circle cx="4" cy="4" r="2"/>
								</svg>
								<span>devansh-mahajan-2b2b99185</span>
							</a>
							<a href="mailto:devansh.mahajan@student.ethz.ch" class="social-link">
								<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
									<polyline points="22,6 12,13 2,6"/>
								</svg>
								<span>devansh.mahajan@student.ethz.ch</span>
							</a>
						</div>
					</div>
					<div class="hero-right">
						<div class="about-section">
							<p>I'm a passionate computer science student and digital craftsman based in Zurich, Switzerland, currently pursuing my studies at <a href="https://ethz.ch" target="_blank" class="link">ETH Zurich</a>.</p>
							<p>I'm driven by the desire to build high-quality products that make a difference. My focus is on craftsmanship, beautiful design, and continuous improvement in everything I create.</p>
							<p>Feel free to connect with me on <a href="https://www.linkedin.com/in/devansh-mahajan-2b2b99185/" target="_blank" class="link">LinkedIn</a>, <a href="https://github.com/Devansh-Mahajan" target="_blank" class="link">GitHub</a>, or reach out via email at <a href="mailto:devansh.mahajan@student.ethz.ch" class="link">devansh.mahajan@student.ethz.ch</a>.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Skills Section -->
			<section class="skills">
				<div class="skills-content">
					<div class="skill-column">
						<div class="skill-item">
							<h3>Algorithms & Data Structures</h3>
							<p>Exploring efficient solutions to complex computational problems through rigorous algorithmic thinking and optimization techniques.</p>
						</div>
						<div class="skill-item">
							<h3>Machine Learning & AI</h3>
							<p>Developing intelligent systems and exploring the frontiers of artificial intelligence, neural networks, and data science.</p>
						</div>
					</div>
					<div class="skill-column">
						<div class="skill-item">
							<h3>Mathematics</h3>
							<p>Deepening understanding of mathematical foundations, from discrete mathematics to advanced calculus and linear algebra.</p>
						</div>
						<div class="skill-item">
							<h3>Software Engineering</h3>
							<p>Building robust, scalable systems and exploring modern development practices, architecture patterns, and technologies.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Spaces Section -->
			<section class="spaces">
				<div class="spaces-content">
					<h2>Spaces</h2>
					<p class="spaces-description">Welcome to my digital spaces! Here you can find different parts of my digital life, from projects, posts and notes.</p>
					<div class="spaces-grid">
						<div class="space-card">
							<h3>Study Notes</h3>
							<p>A collection of my lecture notes from ETH Zurich on computer science topics, algorithms, data structures, and more.</p>
						</div>
						<div class="space-card">
							<h3>Blog</h3>
							<p>A collection of my thoughts, experiences, and learnings from my journey as a computer science student.</p>
						</div>
						<div class="space-card">
							<h3>Projects</h3>
							<p>Showcasing my creations: a collection of projects I've worked on, from coding experiments to design explorations.</p>
						</div>
					</div>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 100%;
		padding: 0;
		background: rgb(var(--black));
		color: rgb(var(--gray-dark));
		min-height: 100vh;
	}

	.hero {
		padding: 4rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: start;
	}

	.hero-left h1 {
		font-size: 3rem;
		font-weight: 700;
		margin: 0 0 0.5rem 0;
		color: white;
		line-height: 1.1;
	}

	.hero-title {
		font-size: 1.25rem;
		color: rgb(var(--gray-dark));
		margin: 0 0 2rem 0;
		font-weight: 400;
	}

	.social-links {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		color: rgb(var(--gray-dark));
		text-decoration: none;
		font-style: italic;
		transition: color 0.2s ease;
	}

	.social-link:hover {
		color: white;
	}

	.social-link svg {
		flex-shrink: 0;
	}

	.about-section {
		font-size: 1rem;
		line-height: 1.6;
		color: rgb(var(--gray-dark));
	}

	.about-section p {
		margin: 0 0 1.5rem 0;
	}

	.about-section p:last-child {
		margin-bottom: 0;
	}

	.link {
		color: rgb(var(--gray-dark));
		text-decoration: underline;
		transition: color 0.2s ease;
	}

	.link:hover {
		color: white;
	}

	.skills {
		padding: 4rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
		border-top: 1px solid rgba(var(--gray-dark), 0.2);
	}

	.skills-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
	}

	.skill-item {
		margin-bottom: 3rem;
	}

	.skill-item:last-child {
		margin-bottom: 0;
	}

	.skill-item h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0 0 0.75rem 0;
		color: white;
	}

	.skill-item p {
		font-size: 1rem;
		line-height: 1.6;
		color: rgb(var(--gray-dark));
		margin: 0;
	}

	.spaces {
		padding: 4rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
		border-top: 1px solid rgba(var(--gray-dark), 0.2);
	}

	.spaces h2 {
		font-size: 2rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		color: white;
	}

	.spaces-description {
		font-size: 1rem;
		line-height: 1.6;
		color: rgb(var(--gray-dark));
		margin: 0 0 3rem 0;
	}

	.spaces-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.space-card {
		background: rgba(var(--gray-dark), 0.1);
		border: 1px solid rgba(var(--gray-dark), 0.2);
		padding: 2rem;
		border-radius: 0.5rem;
		transition: all 0.2s ease;
	}

	.space-card:hover {
		background: rgba(var(--gray-dark), 0.15);
		border-color: rgba(var(--gray-dark), 0.3);
	}

	.space-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		color: white;
	}

	.space-card p {
		font-size: 1rem;
		line-height: 1.6;
		color: rgb(var(--gray-dark));
		margin: 0;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 2rem 1rem;
		}

		.hero-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.hero-left h1 {
			font-size: 2.5rem;
		}

		.skills {
			padding: 2rem 1rem;
		}

		.skills-content {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.skill-item {
			margin-bottom: 2rem;
		}

		.spaces {
			padding: 2rem 1rem;
		}

		.spaces-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.space-card {
			padding: 1.5rem;
		}
	}
</style>